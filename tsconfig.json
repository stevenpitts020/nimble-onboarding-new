{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ]
}
